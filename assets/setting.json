{
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/__pycache__": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.meta": true,
        "**/*.*.meta": true,
        "**/*.unity": true,
        "**/*.unityproj": true,
        "**/*.mat": true,
        "**/*.fbx": true,
        "**/*.FBX": true,
        "**/*.tga": true,
        "**/*.cubemap": true,
        "**/*.prefab": true,
        "**/Library": true,
        "**/ProjectSettings": true,
        "**/Temp": true
    },
    "editor.fontLigatures": true,
    "editor.inlineSuggest.enabled": true,
    "explorer.confirmDragAndDrop": false,
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 100,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    "editor.cursorWidth": 2,
    "editor.lineHeight": 32,
    "editor.fontFamily": "SF Mono, Fira Code, Operator Mono",
    "editor.letterSpacing": 0.5,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.minimap.maxColumn": 130,
    "editor.fontSize": 12,
    "terminal.integrated.fontSize": 15,
    "workbench.editorAssociations": {
        "*.exe": "default"
    },
    "editor.linkedEditing": true,
    "git.autofetch": true,
    "editor.mouseWheelZoom": true,
    "editor.guides.bracketPairs": "active",
    "workbench.iconTheme": "material-icon-theme",
    "extensions.ignoreRecommendations": true,
    "code-runner.saveAllFilesBeforeRun": true,
    "code-runner.saveFileBeforeRun": true,
    "git.enableSmartCommit": true,
    "editor.minimap.showSlider": "always",
    "editor.matchBrackets": "never",
    "rainbowTags.colors": [
        "#e4c1f9",
        "#a9def9",
        "#caffbf",
        "#fcf6bd",
        "#ff99c8"
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.formatOnType": true
    },
    "workbench.colorTheme": "Theme (Italic)",
    "editor.accessibilitySupport": "on",
    "audioCues.diffLineDeleted": "off",
    "audioCues.diffLineInserted": "off",
    "audioCues.lineHasBreakpoint": "off",
    "audioCues.lineHasError": "off",
    "audioCues.lineHasInlineSuggestion": "off",
    "audioCues.lineHasFoldedArea": "off",
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 3,
    "code-runner.runInTerminal": true,
    "indentRainbow.colors": [
        "rgba(185, 251, 192,0.65)",
        "rgba(152, 245, 225,0.65)",
        "rgba(142, 236, 245,0.65)",
        "rgba(144, 219, 244,0.65)",
        "rgba(163, 196, 243,0.65)",
        "rgba(207, 186, 240,0.65)",
        "rgba(241, 192, 232,0.65)",
        "rgba(255, 207, 210,0.65)",
        "rgba(253, 228, 207,0.65)",
        "rgba(251, 248, 204,0.65)"
    ],
    "indentRainbow.indicatorStyle": "light",
    "indentRainbow.lightIndicatorStyleLineWidth": 2,
    "files.autoSave": "afterDelay"
}
